<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andromeda.restaurantfinder.ReviewCriteria">

    <TextView android:id="@+id/intro_blurb_criteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/intro_blurb"
        android:text="@string/intro_blurb_criteria"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/location_label"
        android:layout_alignStart="@+id/location_label" />

    <TextView android:id="@+id/location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_blurb_criteria"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        style="@style/label"
        />

    <EditText android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/edit_text"
        android:text="@string/location_label"
        android:layout_alignTop="@+id/location_label"
        android:layout_alignLeft="@+id/location_label"
        android:layout_alignStart="@+id/location_label" />

    <Spinner android:id="@+id/cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_alignLeft="@+id/get_reviews_button"
        android:layout_alignStart="@+id/get_reviews_button" />

    <Button android:id="@+id/get_reviews_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_reviews_button_label"
        android:layout_below="@+id/cuisine"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location" />

</RelativeLayout>
